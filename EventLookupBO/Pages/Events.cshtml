<h2 class="h2-title mt-5">Events</h2>
<div class="events-container">

    <form action="/" method="post">
        <table class="table events-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Cover</th>
                    <th scope="col">Title</th>
                    <th scope="col">Address</th>
                    <th scope="col">Start date</th>
                    <th scope="col">Finish date</th>
                    <th scope="col">Controls</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < @Model.eventListItemDTO.Count; i++)
                {
                    <tr data-event-id="@Model.eventListItemDTO[i].EventId">
                        <th scope="row">@(i + 1)</th>
                        <td><img src="@Model.eventListItemDTO[i].CoverImagePath" height="100" width="200" /></td>
                        <td>@Model.eventListItemDTO[i].Title</td>
                        <td>@Model.eventListItemDTO[i].AddressCountryCityStreet1</td>
                        <td>@Model.eventListItemDTO[i].StartDate</td>
                        <td>@Model.eventListItemDTO[i].FinishDate</td>
                        <td>
                            <div class="icon-containers-row">
                                <span class="icon-container">
                                    <img class="action-icon edit" data-event-id="@Model.eventListItemDTO[i].EventId" data-toggle="modal" data-target="#exampleModalCenter" 
                                         src="../img/edit-outline.svg" alt="Alternate Text" height="32" width="24" />
                                </span>
                                <span class="icon-container">
                                    <img class="action-icon delete" data-event-id="@Model.eventListItemDTO[i].EventId" src="../img/bin-outline.svg" alt="Alternate Text" height="32" width="24" />
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>


    <a href="#" class="float icon-container bg-primary" id="add-event" data-toggle="modal" data-target="#exampleModalCenter">
        <img class="add my-float" src="../img/add.svg" alt="add" height="24" width="24" />
    </a>

</div>

